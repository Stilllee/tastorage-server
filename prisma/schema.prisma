generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id         Int      @id @default(autoincrement())
  title      String
  servings   Int
  ingredient String[]
  directions String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}